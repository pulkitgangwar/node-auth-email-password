<h1 class="title">Users</h1>

<table class="table" style="width:100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>IsAdmin</th>
      <th></th>
    </tr>
  </thead>
  <tbody>

    {{#each users}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.email}}</td>
        <td>{{this.isAdmin}}</td>
        <td>
            <a>Edit</a>
            <a>Delete</a>
        </td>
      </tr>
    {{/each}}

  </tbody>
</table>